    <recipe id="sopa_de_calabaza">
        <title>Sopa de Calabaza</title>
        <ingredients>
            <ingredient>500 g de calabaza</ingredient>
            <ingredient>1 cebolla</ingredient>
            <ingredient>2 dientes de ajo</ingredient>
            <ingredient>1 zanahoria</ingredient>
            <ingredient>800 ml de caldo de verduras</ingredient>
            <ingredient>1 cucharada de aceite de oliva</ingredient>
            <ingredient>Sal y pimienta al gusto</ingredient>
        </ingredients>
